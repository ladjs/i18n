{
  "name": "@ladjs/i18n",
  "description": "i18n wrapper and Koa middleware for Lad",
  "version": "0.3.1",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "bugs": {
    "url": "https://github.com/ladjs/i18n/issues",
    "email": "niftylettuce@gmail.com"
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "auto-bind": "^1.2.0",
    "boolean": "^0.1.3",
    "boom": "7.2.0",
    "country-language": "^0.1.7",
    "i18n": "^0.8.3",
    "i18n-locales": "^0.0.2",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "qs": "^6.5.2",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.0.2",
    "cross-env": "^5.1.5",
    "debug": "^3.1.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "koa": "^2.5.1",
    "koa-generic-session": "^2.0.1",
    "lint-staged": "^7.1.2",
    "nyc": "^11.8.0",
    "prettier": "^1.12.1",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.8",
    "sinon": "^5.0.7",
    "supertest": "^3.1.0",
    "xo": "^0.21.1"
  },
  "engines": {
    "node": ">=6.4.0"
  },
  "homepage": "https://github.com/ladjs/i18n",
  "keywords": ["@ladjs/i18n", "lass"],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write --single-quote --trailing-comma none",
      "git add"
    ],
    "*.md": ["remark . -qfo", "git add"]
  },
  "main": "lib/index.js",
  "files": ["lib", "locales"],
  "remarkConfig": {
    "plugins": ["preset-github"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ladjs/i18n"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "npm run build && npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava",
    "build": "node_modules/.bin/babel src --out-dir lib",
    "watch": "node_modules/.bin/babel src --watch --out-dir lib"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "xo": {
    "extends": "prettier",
    "plugins": ["prettier"],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true
  }
}
